	  SELECT PRGM_NO, SC_PATH, PRGM_NM FROM GUSER.GSCT_PRGM WHERE PRGM_NO = ?
	  </value>
	</resource>
	
	<!-- Login시 사용자 정보 조회 -->	
	<resource>
	  <key>SELECT_USER</key>
	  <value>
	    SELECT   TRIM(U.USER_NO)
		        ,U.USER_NM
		        ,TRIM(U.EMP_NO)
		        -- ,CryptIT.decrypt(U.PSWD,'DISCCAP') PSWD
			,TRIM(U.PSWD) PSWD
		        ,U.USE_FG
		        ,E.MNG_DEPT_CD AS BSN_DEPT_CD
		        ,(SELECT DEPT_NM FROM DUSER.DHRT_ORG WHERE DEPT_CD = E.MNG_DEPT_CD) AS BSN_DEPT_NM
		        ,D.DEPT_CD AS ONWORK_DEPT_CD
		        ,D.DEPT_NM AS ONWORK_DEPT_NM
		        ,D.MNBR_DIV_CD
		        ,CASE WHEN LENGTH(RTRIM(H.ATTD_DEPT_CD)) > 0 THEN H.ATTD_DEPT_CD ELSE D.DEPT_CD END ATTD_DEPT_CD				
		        ,D.ACCT_DEPT_CD
		        ,CASE WHEN LENGTH(RTRIM(H.ATTD_DEPT_CD))> 0 THEN (SELECT DEPT_NM FROM DUSER.DHRT_ORG WHERE DEPT_CD = H.ATTD_DEPT_CD) ELSE D.DEPT_NM END ATTD_DEPT_NM
				,E.ACCT_DEPT_CD ATTD_ACCT_DEPT_CD				
				,(SELECT DEPT_NM FROM DUSER.DHRT_ORG WHERE DEPT_CD = E.ACCT_DEPT_CD) AS ATTD_ACCT_DEPT_NM
				,TRUNC(MONTHS_BETWEEN(SYSDATE,(CASE WHEN U.RCNT_PSWD_CHNG_DT = '' THEN 
                                                <!-- 2009-10-16 ora-01861 error
CASE WHEN U.LAST_PROC_DT = '' THEN TO_CHAR(SYSDATE,'YYYY-MM-DD') 
-->
                                                CASE WHEN U.LAST_PROC_DT = '' THEN SYSDATE 
                                                     ELSE to_date(U.LAST_PROC_DT ,'YYYY-MM-DD')
                                                END 
                                           ELSE to_date(U.RCNT_PSWD_CHNG_DT ,'YYYY-MM-DD')
                                    END) ))  
                                                <!-- 2009-10-16 ora-01861 error
		     ,TRUNC(MONTHS_BETWEEN(TO_DATE('2010-02-13','YYYY-MM-DD'),TO_DATE('2009-01-03','YYYY-MM-DD') )) 
-->
		     ,TRUNC(MONTHS_BETWEEN(TO_DATE('2010-02-13','YYYY-MM-DD'),TO_DATE('2009-01-03','YYYY-MM-DD') )) 
		     ,NVL(U.IP,' ') AS IP
                     ,NVL(U.MAC,' ') AS MAC
                     ,NVL(U.PC_FG,'0') AS PC_FG
		    ,RTRIM(H.HP_NO1)||RTRIM(H.HP_NO2)||RTRIM(H.HP_NO3) AS HP_NO
		    ,( SELECT RTRIM(Z.HP_NO1)||RTRIM(Z.HP_NO2)||RTRIM(Z.HP_NO3)  FROM DUSER.DHRT_EMP_BASE Z
			 WHERE Z.DEPT_CD  = U.DEPT_CD 
			    AND Z.DUTY_CD='A3') AS DUTY_HP_NO
		    ,CONNECT_CNT	    
		FROM   GUSER.GBCT_USER U 
		      ,DUSER.DHRT_ORG D
		      ,DUSER.DHRT_EMP_BASE H
		      ,DUSER.DHRT_ORG E
         WHERE U.DEPT_CD = D.DEPT_CD(+) 
         AND   U.EMP_NO = H.EMP_NO  (+)		
         AND   H.ATTD_DEPT_CD = E.DEPT_CD (+)
		     AND   TRIM(USER_NO) = ?
	 </value>
	</resource>
	
	<!-- Login시 사용자 역할리스트 조회 -->	
	<resource>
	  <key>SELECT_USER_ROLE</key>
	  <value>
        SELECT  UR.ROLE_NO ,R.ROLE_NM
        FROM    GUSER.GSCT_USER_ROLE UR
               ,GUSER.GSCT_ROLE R
        WHERE   TRIM(UR.USER_NO) = ?
        AND     UR.ROLE_NO = R.ROLE_NO
        
	  </value>
	</resource>
	
	<!-- 사용자별 메뉴 리스트 조회 -->
	<resource>
	  <key>SELECT_MENU</key>
	  <value>
SELECT  T1.PRGM_NO
       ,T2.PRGM_NM
       ,T2.PRGM_PATH
       ,T2.UP_PRGM_NO
       ,T2.SYS_ID
       ,T2.UC_NO
       ,T2.MENU_REF_ODR
       ,T2.LAST_FG
       ,T2.MARK_FG
       ,T2.MENU_ODR
       ,T2.MENU_LEVL
       ,T1.USE_DGRE
       ,NVL(( SELECT  Z.PRGM_NM 
			    FROM    GUSER.GSCT_PRGM Z 
				WHERE   Z.PRGM_NO = T2.UP_PRGM_NO
				AND     ROWNUM = 1  ),'') UP_PRGM_NO
       ,T1.MENU_READ
  FROM
      (
       SELECT A.PRGM_NO,  
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.MENU_READ_FG,1,1)),0)) = 0 THEN '0' ELSE '1' END MENU_READ,
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,1,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,2,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,3,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,4,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,5,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,6,1)),0)) = 0 THEN '0' ELSE '1' END ||
     CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,7,1)),0)) = 0 THEN '0' ELSE '1' END USE_DGRE
          FROM  GUSER.GSCT_USER_ROLE C, GUSER.GSCT_PRGM B, GUSER.GSCT_PRGM_ROLE A, GUSER.GSCT_ROLE D
          WHERE A.PRGM_NO = B.PRGM_NO
          AND   A.ROLE_NO = C.ROLE_NO
   AND   C.ROLE_NO = D.ROLE_NO
          AND   TRIM(C.USER_NO) = ?
          AND   ( ((SUBSTR(TRIM(C.USER_NO),1,3) = 'CAB' AND (  B.PRGM_NO LIKE 'P%' OR B.PRGM_NO LIKE 'R%')) OR 
/*  2008년 10월 04일변경 내용 */
                EXISTS(SELECT 1
                   FROM   GUSER.GBCT_COMM_CD_DESC AA
              WHERE  AA.CD_KIND_NO = 'L50001'
              AND    AA.CD_DESC_NO = B.PRGM_NO))  
             OR
                    (SUBSTR(TRIM(C.USER_NO),1,3) != 'CAB' AND    B.PRGM_NO NOT LIKE 'P%' AND    B.PRGM_NO NOT LIKE 'R%')
                  ) 
/*  2008년 10월 03일까지의 내용        
          AND   ( ((SUBSTR(TRIM(C.USER_NO),1,5) = 'CABIS' AND B.PRGM_NO LIKE 'P%') OR B.PRGM_NO IN ('BBCBT0101', 'CCNGM0401', 'ALOLM1001', 'BATAO0101')) OR
                   (SUBSTR(TRIM(C.USER_NO),1,5) != 'CABIS' AND   B.PRGM_NO NOT LIKE 'P%')
                  ) 
*/                  
                        GROUP BY A.PRGM_NO
      ) T1
      , GUSER.GSCT_PRGM T2
  WHERE T1.PRGM_NO = T2.PRGM_NO
  AND   T2.MARK_FG = ?
                ORDER BY CASE WHEN SUBSTR(T2.PRGM_NO, 1, 1) = 'P' THEN T2.MENU_REF_ODR 
                              WHEN SUBSTR(T2.PRGM_NO, 1, 1) = 'R' THEN T2.MENU_REF_ODR
                	 ELSE 'J' || T2.MENU_REF_ODR END
	  </value>
	</resource>
