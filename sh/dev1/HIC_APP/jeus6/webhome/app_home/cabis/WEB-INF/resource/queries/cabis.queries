	<!-- 사용자별 즐겨찾기 리스트 조회 -->	
	<resource>
	  <key>SELECT_FVRT</key>
	  <value>
		WITH AA 
AS (
SELECT '0' PRGM_NO
	   ,'즐겨찾기' PRGM_NM
	   ,'' PRGM_PATH
	   ,'' UP_PRGM_NO
	   ,'' SYS_ID
	   ,'' UC_NO
	   ,'0' MENU_REF_ODR
	   ,'' LAST_FG
	   ,'1' MARK_FG
	   ,0 MENU_ODR
	   ,'0' LVL
	   ,'' USE_DGRE
	   ,'' AAA
	   ,0 BBB
FROM DUAL
UNION all
SELECT  T1.PRGM_NO
		,T2.PRGM_NM
		,T2.PRGM_PATH
		,T2.UP_PRGM_NO
		,T2.SYS_ID
		,T2.UC_NO
		,T2.MENU_REF_ODR
		,T2.LAST_FG
		,T2.MARK_FG
		,T2.MENU_ODR
		,'1'
		,T1.USE_DGRE
	  ,GUSER.GF_MENU_PATH_01(T2.UP_PRGM_NO) bb
		,T3.MENU_OUTP_ODR
		FROM
		    (
		        SELECT A.PRGM_NO,
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.MENU_READ_FG,1,1)),0)) = 0 THEN '0' ELSE '1' END MENU_READ,
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,1,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,2,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,3,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,4,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,5,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,6,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,7,1)),0)) = 0 THEN '0' ELSE '1' END USE_DGRE
		        FROM  GUSER.GSCT_USER_ROLE C, GUSER.GSCT_PRGM B, GUSER.GSCT_PRGM_ROLE A, GUSER.GSCT_ROLE D
		        WHERE A.PRGM_NO = B.PRGM_NO
		        AND   A.ROLE_NO = C.ROLE_NO
			AND   C.ROLE_NO = D.ROLE_NO
		        AND   TRIM(C.USER_NO) = ?
		        GROUP BY A.PRGM_NO
		    ) T1
		    , GUSER.GSCT_PRGM T2
		    , GUSER.GSCT_FVRT T3
		WHERE T1.PRGM_NO = T2.PRGM_NO
		AND   T1.MENU_READ = ?
		AND   TRIM(T3.USER_NO) = ?
		AND   T3.PRGM_NO = T2.PRGM_NO)
SELECT *
FROM   AA
ORDER BY BBB, PRGM_NO
	  </value>
	</resource>
	
	<!-- search common cd -->
	<resource>
	  <key>SELECT_COMM_CD</key>
	  <value>
        SELECT CD_DESC_NO,CD_DESC_KOR_NM, CLAS1, CLAS2, CD_DESC_ETC_NM  
        FROM  GUSER.GBCT_COMM_CD_DESC
		WHERE CD_KIND_NO=?
		ORDER BY MARK_ODR 
	
	  </value>
	</resource>
	
	<resource>
	  <key>SELECT_COMM_CD_WITH_NULL</key>
	  <value>
        SELECT CD_DESC_NO, CD_DESC_KOR_NM, CLAS1, CLAS2, CD_DESC_ETC_NM
		FROM  
		(
			SELECT '' CD_DESC_NO, '' CD_DESC_KOR_NM, '' CLAS1, '' CLAS2, 0 MARK_ODR , '' CD_DESC_ETC_NM 
			FROM DUAL 
			UNION ALL  
			SELECT CD_DESC_NO, CD_DESC_KOR_NM, CLAS1, CLAS2, MARK_ODR, CD_DESC_ETC_NM 
			FROM GUSER.GBCT_COMM_CD_DESC 
			WHERE CD_KIND_NO=?
		)
		A ORDER BY MARK_ODR 

	  </value>
	</resource>
	
	<!-- 사용자별 프로그램 아이디 및 역할 조회 -->	
	<resource>
	  <key>SELECT_ACCESS_ROLE</key>
	  <value>
        SELECT  T1.PRGM_NO        		
	          , T1.ROLE_NO
		FROM
		    (
		        SELECT A.PRGM_NO,
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.MENU_READ_FG,1,1)),0)) = 0 THEN '0' ELSE '1' END MENU_READ,
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,1,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,2,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,3,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,4,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,5,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,6,1)),0)) = 0 THEN '0' ELSE '1' END ||
					CASE WHEN SUM(NVL(TO_NUMBER('0' || SUBSTR(A.USE_DGRE,7,1)),0)) = 0 THEN '0' ELSE '1' END USE_DGRE
					, A.ROLE_NO
		        FROM  GUSER.GSCT_USER_ROLE C, GUSER.GSCT_PRGM B, GUSER.GSCT_PRGM_ROLE A, GUSER.GSCT_ROLE D
		        WHERE A.PRGM_NO = B.PRGM_NO
		        AND   A.ROLE_NO = C.ROLE_NO
			AND   C.ROLE_NO = D.ROLE_NO
		        AND   TRIM(C.USER_NO) = ?
		        GROUP BY A.PRGM_NO, A.ROLE_NO
		    ) T1
		    , GUSER.GSCT_PRGM T2
		WHERE T1.PRGM_NO = T2.PRGM_NO
		AND   T1.MENU_READ = ?
		AND	  T2.LAST_FG = '1'
	  </value>
	</resource>

	<!-- 사원검색 -->	
	<resource>
	  <key>SELECT_EMP_SCH</key>
	  <value>
         SELECT A.EMP_NO, A.KOR_NAME,  B.DEPT_NM,        
	   		    GUSER.GF_COMMCD_NM_01('H00360',A.POSI_CD) POS_NM,       
	   		    GUSER.GF_COMMCD_NM_01('H00003',B.MNBR_DIV_cD)	MNBR_DIV_CD,       
	   			A.EMAL, RTRIM(A.HP_NO1)||'-'||RTRIM(A.HP_NO2)||'-'||RTRIM(A.HP_NO3) HP_NO, 
	   			RTRIM(A.OFFC_TEL_NO1)||'-'||RTRIM(A.OFFC_TEL_NO2)||'-'||RTRIM(A.OFFC_TEL_NO3) CO_TEL_NO,
				RTRIM(A.FAX_NO1)||'-'||RTRIM(A.FAX_NO2)||'-'||RTRIM(A.FAX_NO3) FAX_NO, A.INNO_NO  
		   FROM DUSER.DHRT_EMP_BASE A 
	 			LEFT JOIN 
	 			DUSER.DHRT_ORG B 
	 			ON A.DEPT_CD = B.DEPT_CD 
		  WHERE A.KOR_NAME like ?||'%' 
		  ORDER BY A.EMP_NO
	  </value>
	</resource>
	
	<!-- 주민번호 검색 -->	
	<resource>
	  <key>SELECT_RESI_NO</key>
	  <value>
         	SELECT RESI_NO
  			  FROM DUSER.DHRT_EMP_BASE
 			 WHERE EMP_NO = ?
	  </value>
	</resource>
